<!DOCTYPE html>
<header>
    {{>header}}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../../css/signup/signup.css">
    <link rel="stylesheet" href="../../css/footers/footerCircle.css">
    <link rel="stylesheet" href="../../css/alert.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
</header>

<body>
    {{>alert}}
    <div id="forms">
        <form id="mobileForm">
            <label>Mobile</label>
            <input type="number" id="mobile" minlength="5" maxlength="10" placeholder="9876543210" autofocus>
            <button type="submit" id="submitMobile">Next&nbsp;<i class="material-icons">arrow_forward</i></button>
        </form>
        <form id="otpForm">
            <label>OTP</label>
            <input type="number" id="otp" minlength="6" maxlength="6" placeholder="x x x x x x">
            <p id="resendOTP">Resend OTP</p>
            <button type="submit" id="submitOTP">Next&nbsp;<i class="material-icons">arrow_forward</i></button>
        </form>
        <form id="nameForm">
            <label>Name</label>
            <input type="text" id="name">
            <button type="submit" id="submitName">Finish</button>
        </form>
    </div>

    <footer id="footer">
        {{>footerCircle}}
    </footer>

    <script src="/socket.io/socket.io.js"></script>
    <script src="../../js/signup-customer.js"></script>
    <script>const userType = "{{userType}}";</script>
    <script>
        function focusInput() {
            document.getElementById("input1").focus();
        }
    </script>
</body>